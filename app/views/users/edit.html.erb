<div class="form-group mt-3">
<%= form_for @user do |f| %>
    <%= f.label :name, :class => "mt-3" %>
    <%= f.text_field :name, :autofocus => true , :class => "form-control mt-3"%>
    <%= f.label :email, :class => "mt-3"%>
    <%= f.email_field :email, :class => "form-control mt-3"%>
    <%= f.label :administrator, :class => "mt-3 mr-5"%>
    <%= f.select :admin, options_for_select([['Yes', true], ['No', false]])%>
    <br />
    <%= f.submit "Update User", class: 'btn btn-outline-success mt-3'  %>
<% end %>
</div>