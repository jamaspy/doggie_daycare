<div class="form-group mt-3">
<%= form_for @owner do |f| %>
    <%= f.label :name, :class => "mt-3" %>
    <%= f.text_field :name, :autofocus => true, :class => "form-control"  %>
    <%= f.label :email, :class => "mt-3"%>
    <%= f.email_field :email, :class => "form-control" %>
   <%= f.label :mobile, :class => "mt-3"%>
    <%= f.text_field :mobile, :class => "form-control" %>
    <%= f.label :address, :class => "mt-3"%>
    <%= f.text_field :address, :class => "form-control" , :class => "form-control" %>

    <%= f.submit "Update Owner", :class => "btn btn-primary mt-3" %>
<% end %>
</div>