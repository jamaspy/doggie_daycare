<div class="container">
<div class="row mt-5">
    <div class="col-md-6">
        <div class="form-group">
            <%= form_for @dog do |f| %>
            <%= f.label :name, :class => "mt-2" %>
            <%= f.text_field :name, :autofocus => true, :class => "form-control"  %>
            <%= f.label :breed, :class => "mt-2"%>
            <%= f.text_field :breed, :class => "form-control" %>
            <%= f.label :color, :class => "mt-2"%>
            <%= f.text_field :color, :class => "form-control" %>
            <%= f.label :sex, :class => "mt-2"%>
            <%= f.text_field :sex, :class => "form-control" %>
            <%= f.label :flea, :class => "mt-2"%>
            <%= f.date_field :flea, :class => "form-control" %>
            <%= f.label :worm, :class => "mt-2"%>
            <%= f.date_field :worm, :class => "form-control" %>
        </div>
    </div>    
        <div class="col-md-6">
            <%= f.label "Upload Image:" %>
            <%= f.cl_image_upload :image, :class => "mt-3 mb-2" %> <br />
            <%= f.url_field :image, :class => "form-control", :placeholder => "Or Paste An Image URL Here" %>
            <div class="display-inline mt-3 mb-2">
                <%= f.label :Vaccination, :class => "form-check-label mt-3"%>
                <%= f.collection_check_boxes(:vaccination_ids, Vaccination.all, :id, :name)do |b| %>
                <%= b.label(class:"display-inline-block") { b.check_box + b.text } %>
                <% end %>
            </div>
            <%= f.label :owner, :class => "mt-3 mr-2"%>
            <%= collection_select(:dog, :owner_id, Owner.all, :id, :name, :class => "form-control") %>
            <%= f.label :vet, :class => "mt-3 ml-3 mr-2"%>
            <%= collection_select(:dog, :vet_id, Vet.all, :id, :name, :class => "form-control") %>
            <br />
            <%= f.submit "Create New Dog", :class => "btn btn-outline-info mt-5 mb-3" %>
            <% end %>
        </div>
    </div>
</div>
</div>